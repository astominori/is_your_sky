nav.navbar.navbar-expand-lg.navbar-light.bg-light
  = link_to "is_your_sky", root_path, class:"navbar-brand"
  button.navbar-toggler[type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"]
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        = link_to "Home", root_path, class:"nav-link"
      li.nav-item
        = link_to "About", about_path, class:"nav-link"
      - if logged_in?
        li.nav-item
          = link_to @current_user.name, user_path(@current_user), class:"nav-link"
        li.nav-item
          = link_to "ログアウト", logout_path, method: :delete, class:"nav-link"
      - else
        li.nav-item
          = link_to "会員登録", new_user_path, class:"nav-link"
        li.nav-item
          = link_to "ログイン", login_path, class:"nav-link"
