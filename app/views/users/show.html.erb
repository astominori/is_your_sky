<div class="container-fluid" style="min-height: 500px;">
  <div class="row">
    <div class="col-md-3">
      <div class="card" style="width: 18rem;">
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url, class:"bd-placeholder-img card-img-top", width:"100%", height:"180" %>
        <% else %>
          <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= @user.name %></h5>
          <p class="card-text"><%= @user.bio %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">フォローユーザ</li>
          <li class="list-group-item">フォロワーユーザ</li>
          <li class="list-group-item"><%= link_to "設定", edit_user_path(@user) %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-9">
      <div class="card-columns">
        <% if @posts %>
          <% @posts.each do |post| %>
            <div class="card bg-dark text-white" >
              <% if post.image %>
                <%= image_tag post.image.url, class:"card-img", alt:"Card image" %>
              <% else %>
                <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap"><title>Placeholder</title><rect fill="#868e96" width="100%" height="100%"/><text fill="#dee2e6" dy=".3em" x="50%" y="50%">Image cap</text></svg>
              <% end %>  
              <div class="card-img-overlay">
                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= simple_format(post.text) %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= link_to "新規投稿はこちら", new_post_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
